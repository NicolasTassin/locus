// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id         String   @id @default(cuid())
  address    String
  lat        Float
  lon        Float
  postalCode String   @map("postal_code")
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("locations")
}

model POI {
  id       String @id @default(cuid())
  name     String
  category String
  lat      Float
  lon      Float

  @@map("pois")
}
